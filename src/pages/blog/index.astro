---
const posts = await Astro.glob('./*.mdx');
import Layout from '../../layouts/default.astro';
---

<Layout>
  <h1 class="text-4xl text-primary font-bold">Blog</h1>
  <p class="mb-8">
    
  </p>
  {
    posts.map((post) => (
      <a href={'/blog/' + post.frontmatter.slug}>
        <h2 class="font-bold text-3xl text-primary">
          {post.frontmatter.title}
        </h2>
        <span class="text-gray-500">{post.frontmatter.created_at}</span>
        <p>{post.frontmatter.desc}</p>
      </a>
    ))
  }
</Layout>
