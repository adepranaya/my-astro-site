  { name: 'HTML 5', icon: 'https://api.iconify.design/logos:html-5.svg' },
  { name: 'CSS 3', icon: 'https://api.iconify.design/logos:css-3.svg' },
  { name: 'JavaScript', icon: 'https://api.iconify.design/logos:javascript.svg' },
  { name: 'Angular', icon: 'https://api.iconify.design/logos:angular-icon.svg' },
  { name: 'React', icon: 'https://api.iconify.design/logos:react.svg' },
  { name: 'React Native', icon: 'https://api.iconify.design/logos:react.svg' },
  { name: 'Vue JS', icon: 'https://api.iconify.design/logos:vue.svg' },
  { name: 'Nuxt JS', icon: 'https://api.iconify.design/logos:nuxt-icon.svg' },
  { name: 'Electron JS', icon: 'https://api.iconify.design/logos:electron.svg' },
  { name: 'Java', icon: 'https://api.iconify.design/logos:java.svg' },
  { name: 'PHP', icon: 'https://api.iconify.design/logos:php.svg' },
  { name: 'Laravel', icon: 'https://api.iconify.design/logos:laravel.svg' },
  { name: 'Codeigniter', icon: 'https://api.iconify.design/logos:codeigniter-icon.svg' },
  { name: 'Bootstrap', icon: 'https://api.iconify.design/logos:bootstrap.svg' },
  { name: 'Tailwindcss', icon: 'https://api.iconify.design/logos:tailwindcss-icon.svg' },
  { name: 'Git', icon: 'https://api.iconify.design/logos:git-icon.svg' },
