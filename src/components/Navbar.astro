---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav
  class="hidden md:flex uppercase justify-between items-center mx-6 lg:mx-auto lg:max-w-6xl py-6"
>
  <ul class="flex w-1/2">
    <li class="mr-6">
      <a
        href="/"
        class={currentPath === ''
          ? 'text-primary font-bold'
          : 'text-gray-900 hover:text-primary'}
        class="text-gray-900 hover:text-primary">home</a
      >
    </li>
    <li class="mr-6">
      <a
        href="/blog"
        class={currentPath === 'blog'
          ? 'text-primary font-bold'
          : 'text-gray-900 hover:text-primary'}
      >
        Blog
      </a>
    </li>
    <li class="mr-6">
      <a
        href="/notes"
        class={currentPath === 'notes'
          ? 'text-primary font-bold'
          : 'text-gray-900 hover:text-primary'}
      >
        notes
      </a>
    </li>
  </ul>

  <a
    class="hover:bg-gray-900-primary bg-primary text-white rounded-full py-2 px-4"
    href="mailto:adepranaya@gmail.com?subject=I want hire you!&body=Hello Ade!, my name is ..."
    >Contact Me</a
  >
</nav>
